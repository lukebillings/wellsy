
<h1> Activities </h1>
<% if current_user.trainer %>
  <%= link_to "Add new activity", "/activities/new", class: "btn btn-primary" %>
<% end %>

<% @activities.each do |activity| %>
  <h2><%= activity.name %></h2>
  <h4><%= activity.description %></h4>
  <div type="button" class="session-card" data-toggle="modal" data-target="#activity-<%= activity.id %>">
    </div>
    <%= render "attendees", activity: activity %>

<% end %>

