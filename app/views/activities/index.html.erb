<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12">

      <h1>My dashboard</h1>
      <div class="mb-3 trainer-dashboard-heading">
        <h2 class="d-inline-block">Activities</h2>
        <% if current_user.trainer %>
          <%= link_to "Add new activity", "/activities/new", class: "btn btn-primary ml-5" %>
        <% end %>
      </div>

      <% @activities.each do |activity| %>
        <div class="activity-card">
          <div class="activity-left">
            <h4><%= activity.name %></h4>
            <button class="sessions-button btn btn-dark" data-activity-id="<%= dom_id(activity) %>">My sessions <i class="fas fa-sort-down"></i></button>
            <p class="category-tag-activity"><span><%= activity.category.name.upcase %></span></p>
          </div>
          <div class="activity-right">
            <%= link_to "New session", new_activity_session_path(activity), class: "btn btn-primary"  %>
            <div class="controls">
              <ul class="list-inline">
              <%# <! –– link to correct action!! ––> %>
                <%= link_to new_activity_session_path(activity) do %> 
                  <li class="list-inline-item"><i class="fas fa-trash-alt"></i></li>
                <% end %>
              <%# <! –– link to correct action!! ––> %>
                <%= link_to new_activity_session_path(activity) do %> 
                  <li class="list-inline-item"><i class="fas fa-edit"></i></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      
      
      <div class="session-dropdown d-none" id="<%= dom_id(activity)%>">
        <% activity.sessions.each do |session| %>
          <%= render "shared/session_card", session: session, edit: false %>
        <% end %>
      </div>
      


    <% end %>
    </div>
  </div>
</div>
