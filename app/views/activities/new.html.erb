<div class="form-container">
<h2 class="text-center">New Activity</h2>
  <div class="info-holder lightgreen-bg">
    <%= simple_form_for @activity do |f| %>
      <%= f.association :category %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.submit "Add activity", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>