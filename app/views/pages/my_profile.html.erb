<% content_for :meta_title, "Profile for #{current_user.name} on #{DEFAULT_META["meta_product_name"]}" %>



  <div class="my-profile container mt-5">
    <div class="row justify-content-center">
      <div class="col-12">
          <h1>My info</h1>
          <div class="img-name d-flex justify-content-center align-items-center">
          
            <% if current_user.respond_to?(:photo) && current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar-large mr-5" %>
            <% else %>
              <%= image_tag "https://hancroft.co.nz/wp-content/uploads/2019/05/profile-placeholder.png", class: "avatar-large mr-5" %>
            <% end %>
            <div class="d-flex flex-column align-items-start my-info">

              <div class="d-flex">
                <div class="info-icon">
                  <h4><i class="fas fa-user"></i></h4>
                </div>
                <h4> <%= current_user.name %></h4>
              </div>

              <div class="d-flex">
                <div class="info-icon">
                  <h4><i class="fas fa-envelope"></i></h4>
                </div>
                <h4> <%= current_user.email %></h4>
              </div>

              <% if current_user.trainer %>
              <div class="d-flex">
                <div class="info-icon">
                  <h4><i class="fas fa-laptop"></i></h4>
                </div>
                <h4> <%= current_user.zoom_link %> </h4>
              </div>
              <% end %>
              

            </div>           
          </div>
          
          <% if current_user.trainer %>
            <h4 class="text-left mt-5">Biography</h4>
            <p><%= current_user.bio %> </p>          
          <% end %>
          
        <div class="d-flex justify-content-center">
          <%= link_to "Edit", edit_user_registration_path, class: "btn btn-primary mt-3" %>
        </div>

      </div>
    </div>
  </div>



