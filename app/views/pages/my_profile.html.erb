

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-12">
          <h1>My info</h1>
          <div class="img-name d-flex justify-content-center align-items-center">
            <% if current_user.respond_to?(:photo) && current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar-large  dropdown-toggle mr-5", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
            <% else %>
              <%= image_tag "https://hancroft.co.nz/wp-content/uploads/2019/05/profile-placeholder.png", class: "avatar-large  dropdown-toggle  mr-5", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="d-flex flex-column align-items-start">
              <h4><i class="fas fa-user"></i> <%= current_user.name %></h4>
              <h4><i class="fas fa-envelope"></i> <%= current_user.email %></h4>
              <h4><i class="fas fa-laptop"></i> <%= current_user.zoom_link %> </h4>
            </div>           
          </div>
          
          <% if current_user.trainer %>
            <h4 class="text-left mt-5">Biography</h4>
            <p><%= current_user.bio %> </p>          
          <% end %>
          
        <div class="d-flex justify-content-center">
          <%= link_to "Edit", edit_user_registration_path, class: "btn btn-primary mt-3" %>
        </div>

      </div>
    </div>
  </div>



