<div class="banner"  style="background-color: white">
  <div class="container">
    <div class="d-flex justify-content-center align-items-center flex-column">
      <h1>Your info</h1>
      <% if current_user.respond_to?(:photo) && current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar-large  dropdown-toggle", height: 100, width: 100, crop: :fill, id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
      <% else %>
        <%= image_tag "https://hancroft.co.nz/wp-content/uploads/2019/05/profile-placeholder.png", class: "avatar-large  dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
      <h2><%= current_user.name %></h2>
      <%= link_to "Edit your profile", edit_user_registration_path, class: "btn btn-primary mt-5 " %>
    </div>
  </div>
</div>

