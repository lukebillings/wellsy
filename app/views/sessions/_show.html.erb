<!-- Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#session-<%= session.id %>">
  Show Session
</button>

<div class="modal fade" id="session-<%= session.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <ul style="list-style-type: none;">
          <li>
            <h5 class="modal-title" id="exampleModalLabel">Class: <%= session.activity.name %></h5>
          </li>
          <li>
            <p>By <%= session.activity.user.name %> </p>
          </li>
          <li>
            <p>⭐️⭐️⭐️⭐️⭐️</p>
          </li>
        </ul>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <p><strong>About <%= session.activity.user.name %></strong></p>
        <P>Bio: <%= session.activity.user.bio %></P>
        <p><strong>About the class</strong></p>
        <p>Description of the class will go here</p>
      </div>
      <div class="modal-footer">
        <ul style="list-style-type: none;">
          <li>
            <p><%= session.start_time.strftime(" %A %e %m %y") %> </p>
          </li>
          <li>
            <p> <%= session.start_time.strftime("%l:%M %p") %> </p>
          </li>
          <li>
            <%= session.min_participants %> / <%= session.max_participants %> spots available</p>
          </li><p>
        </ul>
        <button type="button" class="btn btn-primary">Add for £<%= session.price %></button>
      </div>
    </div>
  </div>
</div>