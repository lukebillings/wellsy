<% content_for :meta_title, "Create a new session on #{DEFAULT_META["meta_product_name"]}" %>

<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
      <h2>New session for <%= @activity.name %> </h2>
      <%= simple_form_for [@activity, @session]  do |f| %>

      <div class="row">
        <div class="col-6">
          <%= f.input :start_time, as: :datetime, html5:  true, label: "Date and start time" %>
          <%#= f.input :end_time, as: :datetime, html5:  true %>
        </div>

        <div class="col-6">
          <%= simple_fields_for :other do |o| %>
            <%= o.input :duration, as: :integer, label: 'Duration (min)', input_html: { min: '0'} %>
          <% end %>
        </div>
      </div>

        <div class="row">
          <div class="col-6">
            <%= f.input :min_participants, collection: 1..20 %>
          </div>
          <div class="col-6">
            <%= f.input :max_participants, collection: 1..20 %>
          </div>
        </div>
        <%= f.input :price, label: "Price (Â£)" %>
        <div class="form-actions">
          <%= f.submit "Add",  class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
