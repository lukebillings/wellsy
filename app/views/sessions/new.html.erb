<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
      <h2>New session for <%= @activity.name %> </h2>
        
      <%= simple_form_for [@activity, @session]  do |f| %>
        <%= f.input :start_time, as: :datetime, html5:  true %>
        <%= f.input :end_time, as: :datetime, html5:  true %>
        <div class="row">
          <div class="col-6">
            <%= f.input :max_participants, collection: 1..20 %>
          </div>
          <div class="col-6">
            <%= f.input :min_participants, collection: 1..20 %>
          </div>
        </div>
        <%= f.input :price %>
        <div class="form-actions">
          <%= f.submit "Add",  class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>